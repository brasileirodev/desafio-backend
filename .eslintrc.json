{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "max-line-length": [
        true,
        {
          "limit": 120,
          "ignore-pattern": "^import |^export {(.*?)} | //",
          "check-strings": true,
          "check-regex": true
        }
      ]
    }
}
