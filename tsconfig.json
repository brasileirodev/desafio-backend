{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true, 
    "lib" : ["es6"],                
    "emitDecoratorMetadata": true,                        
    "module": "commonjs",                                
     "rootDir": "./src",                                  
         "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                                  
   "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                                
    "forceConsistentCasingInFileNames": true,              
    "strict": true,                                          
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["./src/controller/*"],
      "@model/*": ["./src/model/*"],
      "@view/*": ["./src/view/*"],
      "@config/*": ["./src/config/*"],
      "@repository/*": ["./src/repository/*"],
      "@service/*": ["./src/service/*"],
      "@util/*": ["./src/util/*"] 
    }
  }
}
